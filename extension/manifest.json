{
    "name": "Next Chrome",
    "description": "Next.js Chrome Extension starter",
    "version": "0.0.1",
    "manifest_version": 3,
    "action": {
        "default_title": "Next.js app",
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches":[
                "https://*/*",
                "http://*/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_title": "Test Extension"
    },
    "permissions": [
        "activeTab"
    ]
}